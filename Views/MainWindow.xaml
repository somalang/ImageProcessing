<Window x:Class="ImageProcessing.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ImageProcessingApp.ViewModels"
        Title="Image Processing App" Height="500" Width="800">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <StackPanel>
            <Button Content="Open Image" Command="{Binding OpenImageCommand}" />
            <Button Content="Save Image" Command="{Binding SaveImageCommand}" />
            <Button Content="Apply Filter" Command="{Binding ApplyFilterCommand}" />
            <Button Content="Commit to Git" Command="{Binding CommitImageCommand}" />
        </StackPanel>
    </Grid>
</Window>

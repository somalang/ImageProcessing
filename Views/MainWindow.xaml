<Window x:Class="ImageProcessing.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ImageProcessing.ViewModels"
        Title="Image Processing App"
        Height="500" Width="800">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
            <Button Content="이미지 불러오기" 
                    Command="{Binding LoadImageCommand}" 
                    Margin="5"/>
            <Button Content="이미지 삭제" 
                    Command="{Binding DeleteImageCommand}" 
                    Margin="5"/>
            <Button Content="다시 불러오기" 
                    Command="{Binding ReloadImageCommand}" 
                    Margin="5"/>
        </StackPanel>

        <Border BorderBrush="Gray" BorderThickness="1" Margin="5">
            <Image Source="{Binding LoadedImage}" 
                   Stretch="Uniform"/>
        </Border>
    </DockPanel>
</Window>
